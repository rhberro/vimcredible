set number
set relativenumber

set ruler
set colorcolumn=80,100,120

call plug#begin()
    Plug 'scrooloose/nerdtree'
    Plug 'kien/ctrlp.vim'

    " Theme.
    Plug 'AlessandroYorba/Sierra'
call plug#end()

colorscheme Sierra

" Enable this if you're using macOS.
" set macligatures
set guifont=Fira\ Code:h18

" ----------------------------------------------------------------------- CtrlP
let g:ctrlp_custom_ignore = 'node_modules'


" -------------------------------------------------------------------- NERDTree
let NERDTreeShowHidden=1

